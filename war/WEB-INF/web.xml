<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>de.cses.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/testapplication/greet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>dbServlet</servlet-name>
    <servlet-class>de.cses.server.DatabaseServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>dbServlet</servlet-name>
    <url-pattern>/testapplication/db</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>imgUploader</servlet-name>
  	<servlet-class>de.cses.server.images.ImageServiceImpl</servlet-class>
    <multipart-config>
    	<location>/var/lib/tomcat8/webapps/images</location>
    	<max-file-size>20848820</max-file-size>
    	<max-request-size>418018841</max-request-size>
    	<file-size-threshold>1048576</file-size-threshold>
    </multipart-config>
  	
  </servlet>
  
  <servlet-mapping>
    <servlet-name>imgUploader</servlet-name>
    <url-pattern>/testapplication/imgUploader</url-pattern>
  </servlet-mapping>
  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>TestApplication.html</welcome-file>
  </welcome-file-list>

</web-app>
